<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/tools"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:animateLayoutChanges="true"
    android:layout_height="match_parent"
    android:background="#EDEDEE">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="10dp"
    android:animateLayoutChanges="true"
    app:cardPreventCornerOverlap="true"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/package_title"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif"
            android:text="LBC KPK"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/duration"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:text="Duration:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/duration_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:text="Same Day And Night" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/volume"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:text="Volume:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/volume_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:text="Same Day And Nightsahjkhsakjhjksahjhjkas" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/price"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:text="Price:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/price_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:text="Same Day And Night" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activation"
                android:layout_width="98dp"
                android:animateLayoutChanges="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:text="Activation:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activation_info"
                android:animateLayoutChanges="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:text="Activation Info here"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row_2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/deactivation"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:text="Deactivation:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/deactivation_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:text="Deactivation Info here" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/row_3"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/remaining"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:text="Balance Check:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/remaining_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="4dp"
                android:text="Remaining Details Here"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/activate_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="@android:color/holo_red_light"
                android:text="ACTIVATE"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/deactiviate_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="#f6685e"
                android:text="DEACTIVATE"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/details_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_weight="1.5"
                android:background="@android:color/holo_red_light"
                android:text="DETAIL"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>

</LinearLayout>